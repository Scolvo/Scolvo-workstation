<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="6" author="attila.kesztyus@scolvo.com">

    <createTable tableName="note">
      <column name="id" type="VARCHAR(36)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="meeting_room_id" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="notes" type="VARCHAR(500)">
        <constraints nullable="false"/>
      </column>
      <column name="checked" type="VARCHAR(8)">
        <constraints nullable="false"/>
      </column>
      <column name="createdAt" type="BIGINT">
        <constraints nullable="true"/>
      </column>
      <column name="createdBy" type="VARCHAR(36)">
        <constraints nullable="true"/>
      </column>
      <column name="updatedAt" type="BIGINT">
        <constraints nullable="true"/>
      </column>
      <column name="updatedBy" type="VARCHAR(36)">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createIndex tableName="note" indexName="note_meeting_room_idx">
      <column name="meeting_room_id"/>
    </createIndex>
    <createIndex tableName="note" indexName="note_checked_idx">
      <column name="checked"/>
    </createIndex>
    <createIndex tableName="note" indexName="note_createdAt_idx">
      <column name="createdAt"/>
    </createIndex>

    <createTable tableName="note_history">
      <column name="id" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="meeting_room_id" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="notes" type="VARCHAR(500)">
        <constraints nullable="false"/>
      </column>
      <column name="checked" type="VARCHAR(8)">
        <constraints nullable="false"/>
      </column>
      <column name="createdAt" type="BIGINT">
        <constraints nullable="true"/>
      </column>
      <column name="createdBy" type="VARCHAR(36)">
        <constraints nullable="true"/>
      </column>
      <column name="updatedAt" type="BIGINT">
        <constraints nullable="true"/>
      </column>
      <column name="updatedBy" type="VARCHAR(36)">
        <constraints nullable="true"/>
      </column>
    </createTable>

  </changeSet>


</databaseChangeLog>
