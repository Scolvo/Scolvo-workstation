<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="1" author="balazs.holpar@scolvo.com">

    <createTable tableName="user">
      <column name="id" type="TEXT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="teamId" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="visible" type="TEXT">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createTable tableName="workplace">
      <column name="id" type="TEXT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="teamId" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="canBeBooked" type="TEXT">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createTable tableName="team">
      <column name="id" type="TEXT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="name" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="location" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="mapPicturePath" type="TEXT">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createTable tableName="meetingRoom">
      <column name="id" type="TEXT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="name" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="capacity" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="location" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="mapPicturePath" type="TEXT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="reservation">
      <column name="id" type="TEXT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="userId" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="workplaceId" type="TEXT">
        <constraints nullable="true"/>
      </column>
      <column name="meetingRoomId" type="TEXT">
        <constraints nullable="true"/>
      </column>
      <column name="start" type="REAL">
        <constraints nullable="false"/>
      </column>
      <column name="end" type="REAL">
        <constraints nullable="true"/>
      </column>
      <column name="numberOfParticipants" type="INT">
        <constraints nullable="true"/>
      </column>
    </createTable>

  </changeSet>

</databaseChangeLog>
