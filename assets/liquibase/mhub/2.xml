<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="2" author="attila.kesztyus@scolvo.com">

    <createTable tableName="importMetadata">
      <column name="id" type="VARCHAR(36)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="importType" type="VARCHAR(10)">
        <constraints nullable="false"/>
      </column>
      <column name="importDate" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex tableName="importMetadata" indexName="importMetadata_importDate_idx">
      <column name="importDate"/>
    </createIndex>
    <createIndex tableName="importMetadata" indexName="importMetadata_importType_importDate_idx">
      <column name="importType"/>
      <column name="importDate"/>
    </createIndex>

  </changeSet>

</databaseChangeLog>
