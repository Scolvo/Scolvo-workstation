function getUsersForMhub() {
  return select()
    .selectAs("id")
    .selectAs("name")
    .selectAs("role")
    .selectAs("teamId")
    .selectAs("username")
    .selectAs("email")
    .selectAs("status")
    .from("user")
    .execute();
}

function getUserById(userId) {
  var userDaos = select().from("user").where(eq("id", userId)).execute();
  if (userDaos.isEmpty()) {
    throw UserNotFoundException;
  }
  return userDaos.get(0);
}

function getUserByEmail(email) {
  var userDaos = select().from("user").where(eq("email", email)).execute();
  if (userDaos.isEmpty()) {
    throw UserNotFoundException;
  }
  return userDaos.get(0);
}
